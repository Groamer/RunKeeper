<Page
    x:Class="Runkeeper.DataPage"
    xmlns:Charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Runkeeper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Gray">
        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto" HorizontalScrollMode="Enabled">
        <Charting:Chart x:ConnectionId='2' x:Name="TimeChart" CharacterSpacing="10" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" Width="600" Height="600" Margin="0,50,0,0">
            <Charting:LineSeries Title="Distance / Time" Background="White" Margin="0,0,0,0" IndependentValuePath="Time" DependentValuePath="Distance" IsSelectionEnabled="True"/>
        </Charting:Chart>
        </ScrollViewer>
        <StackPanel>
            <Button x:ConnectionId='1' Background="DarkGray" Name="Ref"                   Width="100" Height="50" Content="refresh" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            </StackPanel>
    </Grid>
</Page>

